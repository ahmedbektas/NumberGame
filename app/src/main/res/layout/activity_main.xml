<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context="ba.number.game.MainActivity">


    <Button
        android:layout_width="140dp"
        android:layout_height="75dp"
        android:id="@+id/animalsBtn"
        android:layout_marginBottom="22dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_animals"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="75dp"
        android:layout_marginBottom="22dp"
        android:id="@+id/plantsBtn"
        android:background="@drawable/btn_plants"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="75dp"
        android:layout_marginBottom="22dp"
        android:id="@+id/vehiclesBtn"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_vehicles"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="75dp"
        android:id="@+id/mathBtn"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_math"/>


</LinearLayout>
